#include <iostream>
using namespace std;
int main(){
int* ExpArr (int* Vals, int* size);
void printArr(int* Vals, int size, int elem);
    
    int CurrElem = 0;
    int size = 2;
    int *Vals = new int [size];
    
    bool repeat = true;
        while (repeat == true){
            char option;
            cout << "(p): Print elements" << endl;
            cout << "(a): Add element" << endl;
            cout << "(e): Exit" << endl;
            cin >> option;
            switch (option){
            
                case 'p':{
                    cout << size<< endl;
                    break;
                }
                
                case 'a':{
                    int UserPut;
                    cin >> UserPut;
                    while (UserPut > 0){
                    
                    if (size == CurrElem + 1){
                    Vals = ExpArr(Vals, & size);
                }
                    Vals [CurrElem] = UserPut;
                    CurrElem++;
                    cin >> UserPut;
                        if (size > CurrElem ){
                    cout << "Array Exapnded";
                    }  
                }
                    delete [] Vals;
                    Vals = new int[size];
                    break;        
                }
                case 'e':
                {
                    repeat = false;
                }
        }
        return 0;
    }

};


int *ExpArr (int* Vals, int *size){
    *size *= 2;
    int *tempVals = new int[ *size ];
    for ( int i = 0; i < *size; ++i )
    {
        tempVals[ i ] = Vals[ i ];
    }
    delete [] Vals;
    return tempVals;
}
