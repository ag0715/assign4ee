#include <iostream>
#include <stdlib.h>
using namespace std;

int main ()
{
    int classes = 10;
    int NumberA[classes];
    int NumberB [classes];
    int i;
    double sum = 0;
    double avg1 = 0.0;
    double avg2 = 0.0;
    int min = 0;
    int max = 101;
    int seed_value;
    cin>>seed_value;
    srand(seed_value); //where seed_value is a integer.
    
    
    
    for (i = 0; i < classes; i++) {
        NumberA[i] = (rand() % (max - min ));
        NumberB[i]= (rand() % (max - min ));
    }
    
    for (i = 0; i < 10; ++i){
        sum = sum + NumberA[i];
        avg1 = sum / 10.0;
       
    }
    for (i = 0; i < 10; ++i){
        sum = sum + NumberB[i];
        avg2 = sum / 10.0;
       
    }
    
    cout << "Class A average is: "<<avg1 << endl;
    
    cout << "Class B average is: "<< avg2 << endl;
    
    if (avg1 > avg2){
        cout <<"Class A wins!";
    }
    
    if (avg2 > avg1){
        cout << "Class B wins!";
    }
    
    return 0;
}
