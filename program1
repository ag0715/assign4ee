#include <iostream>
#include <stdlib.h>
using namespace std;

int main ()
{
    int classes = 10;
    int NumberA[classes];
    int NumberB [classes];
    int i;
    int sum = 0;
    int sum2 = 0;
    int min = 0;
    int max = 100;
    int seed_value;
    cin>>seed_value;
    srand(seed_value); //where seed_value is a integer.
    
    
    
    for (i = 0; i < classes; i++) {
        NumberA[i] = (rand() % (max - min + 1) + min);
        NumberB[i]= (rand() % (max - min + 1) + min);
    }
    
    for (i=0;i<10;i++){
        sum += NumberA[i];
        sum2 += NumberB[i];
    }
    
    cout << "Class A average is: "<< sum/10.0 << endl;
    
    cout << "Class B average is: "<< sum2/10.0 << endl;
    
    if (sum/10.0 > sum2/10.0){
        cout <<"Class A wins!";
    }
    
    if (sum2/10.0 > sum/10.0){
        cout << "Class B wins!";
    }
    
    return 0;
}
