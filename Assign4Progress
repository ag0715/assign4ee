#setting up turtle code by Angel M. Gonzalez

import turtle
window = turtle.Screen()
square = turtle.Pen()
square.speed(300)
square.penup()
square.pendown()
square.color("black", "red")

#defining my function to make what i want

def pattern(length, depth,x,y):
    square.up()
    square.ht()
    square.goto(x, y)
    square.st()
    square.down()
    if depth > 1:
        square.begin_fill()
        square.goto(0,0)
        square.forward(length)
        square.left(90)
        square.forward(length)
        square.left(90)
        square.forward(length)
        square.left(90)
        square.forward(length)
        square.end_fill()

        pattern(depth-1, x - length/2, y - length/2, length/2.2)    # lower left
        pattern(depth-1, x - length/2, y + length/2, length/2.2)    # upper left
        pattern(depth-1, x + length/2, y - length/2, length/2.2)    # lower right
        pattern(depth-1, x + length/2, y + length/2, length/2.2)    # upper right






pattern(300, 4, 0, 0)



#run my function



#exit
turtle.exitonclick()

