#setting up stuff

import turtle
window = turtle.Screen()
square = turtle.Pen()
square.speed(0)
square.penup()
square.pendown()
square.color("black", "red")

#defining my function to make what i want

def pattern(length, depth, x, y):
    if depth > 1:
        square.goto(0,0)
        square.begin_fill()
        square.forward(length)
        square.left(90)
        square.forward(length)
        square.left(90)
        square.forward(length)
        square.left(90)
        square.forward(length)
        square.end_fill()

        pattern(length/2.2, depth -1, 1.5,1.5)
        pattern(length/4.4, depth -1, 1.5,1.5)

pattern(300, 4, 0,0)
#run my function



#exit
turtle.exitonclick()
